generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model user {
  id          BigInt      @id @default(autoincrement())
  memberId    BigInt      @unique
  membership  Membership? @relation(fields: [memberId], references: [id])
  firebaseUid String      @unique @db.String(255)
  name        String      @db.String(255)
  email       String      @unique @db.String(255)
  phoneNumber String?     @db.String(20)
  gender      String?     @db.String(50)
  dateOfBirth DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Membership {
  id        BigInt     @id @default(autoincrement())
  users     user[]
  type      String     @unique @db.String(255)
  documents Document[] // Relation to documents
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Document {
  id           BigInt     @id @default(autoincrement())
  documentId   BigInt     @unique
  documentUrl  String     @db.String(1024)
  membershipId BigInt // Foreign key to Membership
  membership   Membership @relation(fields: [membershipId], references: [id])
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
